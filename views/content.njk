{% extends "layout.njk" %}

{% block head %}

        <title>Conte√∫do - Desafio 3-2</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
        rel="stylesheet">

{% endblock %}

{% block content %}
            
        <div class="card">
            {% for item in items %}
            <div class="logo" id="{{item.id}}">
                <img src="{{item.img_src}}" alt="{{item.title}}">
                <p>{{item.price}}</p>
            </div>
            {% endfor %}
        </div>
        <div class="modal-overlay">
            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons" id="close">close</i>
                </a>
                <a class="maximize-modal">
                    <i class="material-icons" id="maximize">maximize</i>
                </a>
                <div class="modal-content">
                    <iframe src="" frameborder="0"></iframe>
                </div>
            </div>
        </div>
        <script src="scripts.js"></script>

{% endblock %}